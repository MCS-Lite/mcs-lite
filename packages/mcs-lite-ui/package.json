{
  "name": "mcs-lite-ui",
  "version": "0.2.0",
  "description": "Common UI used by MCS Lite",
  "repository": "evenchange4/mcs-lite",
  "author": "Michael Hsu <evenchange4@gmail.com>",
  "bugs": {
    "url": "https://github.com/evenchange4/mcs-lite/issues",
    "email": "evenchange4@gmail.com"
  },
  "homepage": "https://github.com/evenchange4/mcs-lite#readme",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf lib",
    "start": "start-storybook -p 6006 --dont-track",
    "build-storybook": "build-storybook",
    "prebuild": "npm run clean",
    "build": "NODE_ENV=production babel src --out-dir lib --ignore example.js,test.js",
    "createEntryFile": "exports-all 'lib/[A-Z]*' 'lib/index.js'",
    "postbuild": "npm run createEntryFile",
    "test": "jest --coverage --runInBand",
    "test:watch": "npm run test -- --watch",
    "flow": "echo 'todo'",
    "lint": "npm run flow"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/.storybook/storyshots-setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}",
      "!src/**/*.example.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/lib/",
      "<rootDir>/flow-typed/"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "\\.(css|less|styl|scss|sass)$": "identity-obj-proxy"
    }
  },
  "devDependencies": {
    "@kadira/react-storybook-addon-info": "^3.3.0",
    "@kadira/storybook": "^2.35.3",
    "babel-cli": "^6.24.0",
    "babel-preset-mcs-lite": "^0.1.2",
    "enzyme": "^2.7.1",
    "enzyme-to-json": "^1.5.0",
    "flow-bin": "^0.41.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^19.0.2",
    "mcs-lite-icon": "^0.1.6",
    "mcs-lite-scripts": "^0.1.4",
    "mcs-lite-theme": "^0.1.2",
    "normalize.css": "^5.0.0",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-test-renderer": "^15.4.2",
    "storyshots": "^3.2.2",
    "styled-components": "^1.4.4"
  },
  "dependencies": {
    "dom-align": "^1.5.3",
    "left-pad": "^1.1.3",
    "moment": "^2.17.1",
    "ramda": "^0.23.0",
    "react-hammerjs": "^0.5.0",
    "react-motion-ui-pack": "^0.10.2",
    "react-overlays": "^0.6.12",
    "react-text-truncate": "^0.8.3",
    "recharts": "^0.21.2"
  },
  "peerDependencies": {
    "mcs-lite-icon": "^0.1.6",
    "mcs-lite-theme": "^0.1.2",
    "styled-components": "^1.4.4"
  }
}

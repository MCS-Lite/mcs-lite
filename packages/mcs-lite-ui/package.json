{
  "name": "mcs-lite-ui",
  "version": "0.3.3",
  "description": "Common UI used by MCS Lite",
  "repository": "evenchange4/mcs-lite",
  "author": "Michael Hsu <evenchange4@gmail.com>",
  "bugs": {
    "url": "https://github.com/evenchange4/mcs-lite/issues",
    "email": "evenchange4@gmail.com"
  },
  "homepage": "https://github.com/evenchange4/mcs-lite#readme",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf lib",
    "start": "start-storybook -p 6006 --dont-track",
    "build-storybook": "build-storybook",
    "prebuild": "npm run clean",
    "build": "NODE_ENV=production babel src --out-dir lib --ignore example.js,test.js",
    "createEntryFile": "exports-all 'lib/[A-Z]*' 'lib/index.js'",
    "postbuild": "npm run createEntryFile",
    "test": "NODE_ENV='test' TZ='UTC' jest --coverage --runInBand",
    "test:watch": "npm run test -- --watch",
    "flow": "echo 'todo'",
    "lint": "npm run flow"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/.storybook/storyshots-setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}",
      "!src/**/*.example.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/lib/",
      "<rootDir>/flow-typed/"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "\\.(css|less|styl|scss|sass)$": "identity-obj-proxy"
    }
  },
  "devDependencies": {
    "@kadira/react-storybook-addon-info": "^3.4.0",
    "@kadira/storybook": "^2.35.3",
    "babel-cli": "^6.24.1",
    "babel-preset-mcs-lite": "^0.2.0",
    "enzyme": "^2.8.1",
    "enzyme-to-json": "^1.5.0",
    "flow-bin": "^0.43.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^19.0.2",
    "mcs-lite-icon": "^0.2.2",
    "mcs-lite-scripts": "^0.2.2",
    "mcs-lite-theme": "^0.2.3",
    "normalize.css": "^6.0.0",
    "react": "^15.5.4",
    "react-addons-test-utils": "^15.5.1",
    "react-dom": "^15.5.4",
    "react-test-renderer": "^15.5.4",
    "storyshots": "^3.2.2",
    "styled-components": "2.0.0-15"
  },
  "dependencies": {
    "copy-to-clipboard": "^3.0.5",
    "date-fns": "^1.28.2",
    "dom-align": "^1.5.3",
    "left-pad": "^1.1.3",
    "ramda": "^0.23.0",
    "react-hammerjs": "^0.5.0",
    "react-motion-ui-pack": "^0.10.2",
    "react-overlays": "^0.6.12",
    "react-svg-morph": "^0.1.10",
    "react-syntax-highlighter": "^5.3.0",
    "react-text-truncate": "^0.8.3",
    "recharts": "^0.21.2",
    "recompose": "^0.23.1",
    "rxjs": "^5.3.0"
  },
  "peerDependencies": {
    "mcs-lite-icon": "^0.2.2",
    "mcs-lite-theme": "^0.2.3",
    "styled-components": "2.0.0-15"
  }
}

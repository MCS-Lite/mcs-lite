{
  "name": "mcs-lite-ui",
  "version": "0.4.4",
  "description": "Common UI used by MCS Lite",
  "repository": "MCS-Lite/mcs-lite",
  "author": "Michael Hsu <evenchange4@gmail.com>",
  "bugs": {
    "url": "https://github.com/MCS-Lite/mcs-lite/issues",
    "email": "evenchange4@gmail.com"
  },
  "homepage": "https://github.com/MCS-Lite/mcs-lite#readme",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf lib",
    "start": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prebuild": "npm run clean",
    "build": "NODE_ENV=production babel src --out-dir lib --ignore example.js,test.js",
    "createEntryFile": "exports-all 'lib/[A-Z]*' 'lib/index.js'",
    "postbuild": "npm run createEntryFile",
    "test": "NODE_ENV='test' TZ='UTC' jest --coverage --runInBand",
    "test:watch": "npm run test -- --watch"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/.storybook/storyshots-setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}",
      "!src/**/*.example.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/lib/"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "\\.(css|less|styl|scss|sass)$": "identity-obj-proxy"
    }
  },
  "devDependencies": {
    "@storybook/addon-info": "^3.1.3",
    "@storybook/addon-options": "^3.1.2",
    "@storybook/addon-storyshots": "^3.1.2",
    "@storybook/react": "^3.1.3",
    "babel-cli": "^6.24.1",
    "babel-preset-mcs-lite": "^0.3.4",
    "enzyme": "^2.8.2",
    "enzyme-to-json": "^1.5.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^20.0.4",
    "mcs-lite-icon": "^0.3.4",
    "mcs-lite-scripts": "^0.3.4",
    "mcs-lite-theme": "^0.3.4",
    "normalize.css": "^7.0.0",
    "react": "^15.6.0",
    "react-addons-test-utils": "^15.5.1",
    "react-dom": "^15.6.0",
    "react-test-renderer": "^15.5.4",
    "styled-components": "^2.0.1"
  },
  "dependencies": {
    "copy-to-clipboard": "^3.0.6",
    "date-fns": "^1.28.5",
    "dom-align": "^1.6.2",
    "left-pad": "^1.1.3",
    "prop-types": "^15.5.10",
    "ramda": "^0.24.1",
    "react-hammerjs": "^0.5.0",
    "react-motion-ui-pack": "^0.10.2",
    "react-overlays": "^0.7.0",
    "react-svg-morph": "^0.1.10",
    "react-syntax-highlighter": "^5.6.2",
    "react-text-truncate": "^0.10.2",
    "recharts": "^1.0.0-alpha.1",
    "recompose": "^0.23.5",
    "rxjs": "^5.4.0"
  },
  "peerDependencies": {
    "mcs-lite-icon": "^0.3.4",
    "mcs-lite-theme": "^0.3.4",
    "react": "^15.6.0",
    "react-dom": "^15.6.0",
    "styled-components": "^2.0.1"
  }
}

{
  "name": "mcs-lite-ui",
  "version": "0.4.10",
  "description": "Common UI used by MCS Lite",
  "repository": "MCS-Lite/mcs-lite",
  "author": "Michael Hsu <evenchange4@gmail.com>",
  "bugs": {
    "url": "https://github.com/MCS-Lite/mcs-lite/issues",
    "email": "evenchange4@gmail.com"
  },
  "homepage": "https://github.com/MCS-Lite/mcs-lite#readme",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf lib",
    "start": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prebuild": "npm run clean",
    "build": "NODE_ENV=production babel src --out-dir lib --ignore example.js,test.js",
    "createEntryFile": "exports-all 'lib/[A-Z]*' 'lib/index.js'",
    "postbuild": "npm run createEntryFile",
    "test": "NODE_ENV='test' TZ='UTC' jest --coverage --runInBand",
    "test:watch": "npm run test -- --watch"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/setupTests.js",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}",
      "!src/**/*.example.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/lib/"
    ]
  },
  "devDependencies": {
    "@storybook/addon-info": "^3.2.12",
    "@storybook/addon-options": "^3.2.12",
    "@storybook/addon-storyshots": "^3.2.12",
    "@storybook/react": "^3.2.12",
    "babel-cli": "^6.26.0",
    "babel-preset-mcs-lite": "^0.3.7",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.1",
    "enzyme-to-json": "^3.1.2",
    "jest": "^21.2.1",
    "jest-styled-components": "^4.7.0",
    "mcs-lite-icon": "^0.3.8",
    "mcs-lite-scripts": "^0.3.8",
    "mcs-lite-theme": "^0.3.7",
    "polished": "^1.8.0",
    "raf": "^3.4.0",
    "react": "^16.0.0",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.0.0",
    "react-test-renderer": "^16.0.0",
    "styled-components": "^2.2.1"
  },
  "dependencies": {
    "copy-to-clipboard": "^3.0.8",
    "create-react-class": "^15.6.2",
    "date-fns": "^1.29.0",
    "dom-align": "^1.6.5",
    "flubber": "^0.4.0",
    "left-pad": "^1.1.3",
    "prop-types": "^15.6.0",
    "raf-throttle": "^2.0.3",
    "ramda": "^0.25.0",
    "react-cookie": "^1.0.5",
    "react-hammerjs": "^0.5.0",
    "react-motion": "^0.5.2",
    "react-motion-ui-pack": "^0.10.3",
    "react-overlays": "^0.8.2",
    "react-render-to-json": "^0.0.5",
    "react-svg-morph": "^0.1.10",
    "react-syntax-highlighter": "^5.7.0",
    "react-text-truncate": "^0.12.0",
    "react-waypoint": "^7.3.1",
    "recharts": "^1.0.0-apha.5",
    "recompose": "^0.26.0",
    "rxjs": "^5.4.3"
  },
  "peerDependencies": {
    "mcs-lite-icon": "^0.3.8",
    "mcs-lite-theme": "^0.3.7",
    "react": "^15.0.0 || ^16.0.0",
    "styled-components": "^2.2.1"
  }
}

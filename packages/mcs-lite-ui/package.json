{
  "name": "mcs-lite-ui",
  "version": "1.0.0",
  "main": "index.js",
  "repository": {},
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf lib",
    "start": "start-storybook -p 6006 --dont-track",
    "build:storybook": "build-storybook",
    "build:lib": "NODE_ENV=production babel src --out-dir lib",
    "build": "npm run build:lib && npm run build:storybook",
    "test": "jest",
    "stylelint": "stylelint './src/**/*.js'",
    "flow": "flow check",
    "lint": "npm run stylelint && npm run flow"
  },
  "stylelint": {
    "extends": "stylelint-config-mcs-lite"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/.storybook/storyshots-setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}",
      "!src/**/*.example.{js,jsx}"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "\\.(css)$": "<rootDir>/jest/mocks/cssModules.js"
    }
  },
  "devDependencies": {
    "@kadira/react-storybook-addon-info": "^3.3.0",
    "@kadira/storybook": "^2.21.0",
    "babel-cli": "^6.18.0",
    "babel-preset-mcs-lite": "^1.0.0",
    "enzyme": "^2.7.0",
    "enzyme-to-json": "^1.4.5",
    "flow-bin": "^0.37.4",
    "jest": "^18.1.0",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "storyshots": "^3.2.0",
    "stylelint": "^7.7.1",
    "stylelint-config-mcs-lite": "^1.0.0"
  },
  "dependencies": {
    "d3-color": "^1.0.2",
    "normalize.css": "^5.0.0",
    "ramda": "^0.23.0",
    "react-test-renderer": "^15.4.2",
    "react-text-truncate": "^0.8.3",
    "styled-components": "^1.3.0"
  }
}

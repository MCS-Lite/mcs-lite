{
  "name": "mcs-lite-ui",
  "version": "0.0.0",
  "main": "lib/index.js",
  "repository": {},
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf lib",
    "start": "start-storybook -p 6006 --dont-track",
    "build-storybook": "build-storybook",
    "prebuild": "npm run clean",
    "build": "NODE_ENV=production babel src --out-dir lib --ignore example.js",
    "createEntryFile": "node node_modules/mcs-lite-scripts/exportsAllComponents 'src/[A-Z]*' > lib/index.js",
    "postbuild": "npm run createEntryFile",
    "prepublish": "npm run build",
    "test": "jest",
    "stylelint": "stylelint './src/**/*.js'",
    "flow": "flow check",
    "lint": "npm run stylelint && npm run flow"
  },
  "stylelint": {
    "extends": "stylelint-config-mcs-lite",
    "ignoreFiles": "**/*.example.js"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/.storybook/storyshots-setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}",
      "!src/**/*.example.{js,jsx}"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "\\.(css|less|styl|scss|sass)$": "identity-obj-proxy"
    }
  },
  "devDependencies": {
    "@kadira/react-storybook-addon-info": "^3.3.0",
    "@kadira/storybook": "^2.35.3",
    "babel-cli": "^6.22.2",
    "babel-preset-mcs-lite": "^0.0.0",
    "enzyme": "^2.7.0",
    "enzyme-to-json": "^1.4.5",
    "flow-bin": "^0.37.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^18.1.0",
    "mcs-lite-icon": "^0.0.0",
    "mcs-lite-scripts": "^0.0.0",
    "mcs-lite-theme": "^0.0.0",
    "normalize.css": "^5.0.0",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-test-renderer": "^15.4.2",
    "storyshots": "^3.2.0",
    "styled-components": "^1.3.1",
    "stylelint": "^7.7.1",
    "stylelint-config-mcs-lite": "^0.0.0"
  },
  "dependencies": {
    "ramda": "^0.23.0",
    "react-text-truncate": "^0.8.3"
  },
  "peerDependencies": {
    "mcs-lite-icon": "^0.0.0",
    "mcs-lite-theme": "^0.0.0",
    "styled-components": "^1.3.1"
  }
}

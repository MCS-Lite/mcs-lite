{
  "name": "mcs-lite",
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "postinstall": "npm run bootstrap && ./tasks/build.sh",
    "clean": "lerna clean && rm -rf node_modules",
    "stylelint": "stylelint './**/*.js' --ignore-path .linterignore",
    "eslint": "eslint ./ --ignore-path .linterignore",
    "ncu": "ncu && lerna exec --concurrency 1 -- ncu",
    "ncu-update": "ncu -au && lerna exec --concurrency 1 -- ncu -au"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "codecov": "^1.0.1",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "lerna": "2.0.0-beta.37",
    "npm-check-updates": "^2.10.2",
    "stylelint": "^7.8.0"
  },
  "stylelint": {
    "extends": "./packages/stylelint-config-mcs-lite/index.js"
  }
}

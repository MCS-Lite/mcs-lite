{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "postinstall": "npm run bootstrap && ./tasks/build.sh",
    "clean": "rm -rf node_modules && rm -rf ./packages/*/node_modules && rm -rf ./packages/*/.DS_Store && rm -rf ./packages/*/*.log",
    "stylelint": "stylelint './**/*.js' --ignore-path .linterignore",
    "eslint": "eslint ./ --ignore-path .linterignore",
    "ncu": "ncu && lerna exec --concurrency 1 -- ncu",
    "ncu-update": "ncu -au && lerna exec --concurrency 1 -- ncu -au",
    "publish": "lerna publish",
    "prepublish": "./tasks/build.sh",
    "danger": "danger run --verbose"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "codecov": "^1.0.1",
    "danger": "^0.11.5",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "lerna": "2.0.0-beta.37",
    "lerna-changelog": "^0.3.0",
    "npm-check-updates": "^2.10.3",
    "stylelint": "^7.9.0"
  },
  "stylelint": {
    "extends": "./packages/stylelint-config-mcs-lite/index.js"
  }
}
